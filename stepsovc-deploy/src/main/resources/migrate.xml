<?xml version="1.0" encoding="UTF-8"?>
<project>
    <property file="${basedir}/properties/${env}/deploy.properties"/>

    <property file="${basedir}/properties/${env}/migration.properties"/>

    <path id="lib.path">
        <fileset dir="${tomcat.lib.home}" includes="**/*.jar"/>
    </path>

    <target name="migrate.caregiver">
        <echo message="Please Wait while the caregiver data is being imported...."/>
        <echo message="PATH -- ${lib.path} ${tomcat.lib.home}"/>
        <java fork="false" classname="${main.class.name}">
            <arg value="caregiver"/>
            <arg value="${caregiver.csv.path}"/>
            <classpath>
                <path refid="lib.path"/>
            </classpath>
        </java>
        <echo message="Caregiver data import is completed"/>
    </target>

    <target name="migrate.caregiver.phonenumber">
        <echo message="Please Wait while the caregiver phone numbers are being imported...."/>
        <echo message="PATH -- ${lib.path} ${tomcat.lib.home}"/>
        <java fork="false" classname="${main.class.name}">
            <arg value="caregiver-phonenumber"/>
            <arg value="${caregiver-phonenumber.csv.path}"/>
            <classpath>
                <path refid="lib.path"/>
            </classpath>
        </java>
        <echo message="Caregiver Phone Number import is completed"/>
    </target>

    <target name="migrate.beneficiary">
        <echo message="Please Wait while the beneficiary data is being imported...."/>
        <java fork="false" classname="${main.class.name}">
            <arg value="beneficiary"/>
            <arg value="${beneficiary.csv.path}"/>
            <classpath>
                <path refid="lib.path"/>
            </classpath>
        </java>
        <echo message="Beneficiary data import is completed"/>
    </target>

    <target name="migrate.facility">
        <echo message="Please Wait while the facility data is being imported...."/>
        <java fork="false" classname="${main.class.name}">
            <arg value="facility"/>
            <arg value="${facility.csv.path}"/>
            <classpath>
                <path refid="lib.path"/>
            </classpath>
        </java>
        <echo message="Facility data import is completed"/>
    </target>

    <target name="migrate.facility.phonenumber">
        <echo message="Please Wait while the facility phone numbers are being imported...."/>
        <java fork="false" classname="${main.class.name}">
            <arg value="facility-phonenumber"/>
            <arg value="${facility-phonenumber.csv.path}"/>
            <classpath>
                <path refid="lib.path"/>
            </classpath>
        </java>
        <echo message="Facility phone number import is completed"/>
    </target>
</project>
